<div class="container">
    <div class="page-header row">
        <h2>New Ticket <small>Create a new Trouble Ticket</small></h2>
    </div>
    <form id="new-ticket" class="form-horizontal">
        {{input type="hidden" value="dateSubmitted" name="dateSubmitted"}}
        {{input type="hidden" value="newTicket.id" name="id"}}
        <div class="panel panel-default">
            <div class="panel-heading">Originator</div>
            <div class="panel-body">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="orgFname" class="col-sm-2 control-label">First Name</label>
                        <div class="col-sm-10">
                          {{input value=newTicket.origFirstName id="orgFname" placeholder="First Name" class="form-control"}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="orgLname" class="col-sm-2 control-label">Last Name</label>
                        <div class="col-sm-10">
                          {{input value=newTicket.origLastName id="orgLname" placeholder="Last Name" class="form-control"}}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="orgEmail" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                          {{input value=newTicket.origEmail id="orgEmail" placeholder="Email" class="form-control" type="email"}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="orgPhone" class="col-sm-2 control-label">Phone</label>
                        <div class="col-sm-10">
                          {{input value=newTicket.origPhone id="orgPhone" placeholder="Phone" class="form-control" type="tel"}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Submitter</div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-11">
                        <div class="checkbox">
                            <label>{{input type="checkbox" checked=cbState name="sameAsOriginator" change=(action "copyOriginator")}} Same as Originator </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="subFname" class="col-sm-2 control-label">First Name</label>
                            <div class="col-sm-10">
                              {{input value=newTicket.subFirstName id="subFname" placeholder="First Name" class="form-control"}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="subLname" class="col-sm-2 control-label">Last Name</label>
                            <div class="col-sm-10">
                              {{input value=newTicket.subLastName id="subLname" placeholder="Last Name" class="form-control"}}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="subEmail" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                              {{input value=newTicket.subEmail id="subEmail" placeholder="Email" class="form-control" type="email"}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="subPhone" class="col-sm-2 control-label">Phone</label>
                            <div class="col-sm-10">
                              {{input value=newTicket.subPhone id="subPhone" placeholder="Phone" class="form-control" type="tel"}}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Details</div>
            <div class="panel-body">
              <div class="col-md-6">
                  <div class="form-group">
                      <label for="synopsis" class="col-sm-2 control-label">Synopsis</label>
                      <div class="col-sm-10">
                        {{input value=newTicket.synopsis id="synopsis" placeholder="Synopsis" class="form-control"}}
                      </div>
                  </div>
                  <div class="form-group">
                      <label for="description" class="col-sm-2 control-label">Description</label>
                      <div class="col-sm-10">
                        {{textarea value=newTicket.description id="description" placeholder="Description" class="form-control" rows="8"}}
                      </div>
                  </div>
              </div>
              <div class="col-md-6">
                  <fieldset>
                      <legend>Severity</legend>
                      {{#radio-button value="Minor" groupValue=severity changed="updateSeverity"}} Minor {{/radio-button}}
                      {{#radio-button value="Major" groupValue=severity changed="updateSeverity"}} Major {{/radio-button}}
                      {{#radio-button value="Complete Failure" groupValue=severity changed="updateSeverity"}} Complete Failure {{/radio-button}}
                  </fieldset>
                  <fieldset>
                      <legend>Priority</legend>
                      {{#radio-button value="Low" groupValue=priority changed="updatePriority"}} Low {{/radio-button}}
                      {{#radio-button value="Normal" groupValue=priority changed="updatePriority"}} Normal {{/radio-button}}
                      {{#radio-button value="Urgent" groupValue=priority changed="updatePriority"}} Urgent {{/radio-button}}
                  </fieldset>
                  <fieldset>
                      <legend>Network</legend>
                      {{#radio-button value="UNCLASS" groupValue=network changed="updateNetwork"}} UNCLASS {{/radio-button}}
                      {{#radio-button value="SIPRNET" groupValue=network changed="updateNetwork"}} SIPRNET {{/radio-button}}
                      {{#radio-button value="JWICS" groupValue=network changed="updateNetwork"}} JWICS {{/radio-button}}
                  </fieldset>
              </div>
            </div>
          </div>
        <div class="col-md-12">
            <button {{action "createTicket" newTicket}} type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
